<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/dp16"
    android:paddingVertical="@dimen/dp8">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/placeholder_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vacancy_name_with_location"
        />

    <TextView
        android:id="@+id/vacancy_name_with_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        style="@style/MediumText.22size"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_image"
        app:layout_constraintBottom_toTopOf="@id/employer"
        tools:text="Android-разработчик, Москва"
        />

    <TextView
        android:id="@+id/employer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        style="@style/RegularText.16size"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/vacancy_name_with_location"
        app:layout_constraintStart_toEndOf="@id/logo_image"
        app:layout_constraintBottom_toTopOf="@id/salary"
        tools:text="Еда"
        />

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        style="@style/RegularText.16size"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/logo_image"
        app:layout_constraintTop_toBottomOf="@id/employer"
        tools:text="от 100 000 Р"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
